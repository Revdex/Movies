<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.digitu.movies.modules.movies.MovieItemData"/>
    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{(view) -> movie.onClick(view)}"
        android:onLongClick="@{(view) ->  movie.onLongClick(view)}"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="#0F0">

            <android.support.constraint.Guideline
                android:id="@+id/item_movie_line_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3"/>

            <ImageView
                android:id="@+id/item_movie_img_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:contentDescription=""
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="h,1:1.4"
                app:layout_constraintEnd_toEndOf="@id/item_movie_line_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{movie.poster}"
                tools:background="#FF0"/>

            <TextView
                android:id="@+id/item_movie_txv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:drawableEnd="@drawable/ic_star_rate"
                android:drawablePadding="2dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:minLines="1"
                android:padding="2dp"
                android:text="@{movie.rate}"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#F00"
                tools:text="5.5"/>

            <TextView
                android:id="@+id/item_movie_txv_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minLines="1"
                android:text="@{movie.title}"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/item_movie_txv_rate"
                app:layout_constraintEnd_toStartOf="@id/item_movie_txv_rate"
                app:layout_constraintStart_toStartOf="@id/item_movie_line_vertical"
                app:layout_constraintTop_toTopOf="@id/item_movie_txv_rate"
                tools:background="#F00"
                tools:text="Alien : Covenant"/>

            <TextView
                android:id="@+id/item_movie_txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_date"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:minLines="1"
                android:padding="2dp"
                android:text="@{movie.date}"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/item_movie_line_vertical"
                app:layout_constraintTop_toBottomOf="@id/item_movie_txv_title"
                tools:background="#00F"
                tools:text="19/05/2017"/>

            <TextView
                android:id="@+id/item_movie_txv_genre"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical|end"
                android:maxLines="1"
                android:minLines="1"
                android:padding="2dp"
                android:text='@{movie.genre}'
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/item_movie_txv_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_movie_txv_date"
                app:layout_constraintTop_toTopOf="@id/item_movie_txv_date"
                tools:background="#F00"
                tools:text="Thriller, Horreur, Science-F"/>


            <TextView
                android:id="@+id/item_movie_txv_overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="3"
                android:minLines="3"
                android:padding="2dp"
                android:text="@{movie.overview}"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/item_movie_line_vertical"
                app:layout_constraintTop_toBottomOf="@id/item_movie_txv_date"
                tools:background="#00F"
                tools:text="Les membres d’équipage du vaisseau Covenant,
                 à destination d’une planète située au fin fond de notre galaxie,
                 découvrent ce qu’ils pensent être un paradis "/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>